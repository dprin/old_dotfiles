# make sxhkd reload its configuration files
super + Escape
	pkill -USR1 -x sxhkd

# quit or restart bspwm
super + shift + {c,r}
	bspc {quit,wm -r}

# create a new terminal window or swap the current one to the biggest one in the screen
super + {_,shift + }Return
	{alacritty, bspc node -s biggest.local}

# close or kill a window
super + {_,shift + }q
	bspc node -{k,c}

# change the window state
super + {t,shift + t,l,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# alternate between the tiled and moncle layout
super + m
	bspc desktop -l next

# expand a window by moving one of its side outward
super + ctrl + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving onfe of its side inward
super + ctrl + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# focus or send a window to the given desktop
super + {_,shift + }{1-9,0}
	~/.config/scripts/change-window.sh {change, move} '^{1-9,10}'

super + alt + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# run dmenu
super + d
	~/.config/rofi/launchers/type-1/launcher.sh

super + x
	~/.config/rofi/powermenu/type-1/powermenu.sh

super + shift + s
	flameshot gui -c -p ~/Pictures/
